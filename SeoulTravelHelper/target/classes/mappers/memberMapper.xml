<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="global.sesoc.shop.dao.MemberMapper">

	<!-- 회원가입 -->
	<insert id="insert" parameterType="Member">
		INSERT INTO SHOPMEMBER
		(
			USERID 
			,PASSWORD 
			,USERNAME
			,ADDRESS
			,PHONE
		) VALUES(
			#{userid}
			,#{password}
			,#{username}
			,#{address}
			,#{phone}
		)
	</insert >
	
	<!-- 회원정보수정 -->
	<update id="update" parameterType="Member">
	UPDATE MEMBERS2
	   SET USERPWD   = #{userpwd}
		  ,USERNAME  = #{username}
		  ,HOBBY     = #{hobby}
		  ,GENDER    = #{gender}
		  ,AGE       = #{age}
		  ,PHONE     = #{phone}
		  ,ADDRESS   = #{address}
		  ,INTRODUCE = #{introduce}
	</update>
	
	<!-- 로그인, 아이디 중복확인 -->
		<select id="loginMember" parameterType="Member" resultType="Member">
		SELECT USERID 
			,PASSWORD 
			,USERNAME
			,ADDRESS
			,PHONE
		  FROM SHOPMEMBER
		 WHERE USERID   = #{userid}
		   AND PASSWORD = #{password}
	</select>
	
</mapper>
